# Environment
NODE_ENV=development

# Server
PORT=3001
HOST=localhost

# Database
DATABASE_URL="file:./dev.db"

# Database Connection Pool Configuration (optional - uses environment defaults)
# DB_POOL_MIN_CONNECTIONS=1
# DB_POOL_MAX_CONNECTIONS=10
# DB_POOL_ACQUIRE_TIMEOUT_MS=30000
# DB_POOL_QUERY_TIMEOUT_MS=30000
# DB_POOL_IDLE_TIMEOUT_MS=300000
# DB_POOL_HEALTH_CHECK_INTERVAL_MS=30000

# JWT
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d
JWT_REFRESH_EXPIRY_REMEMBER=30d

# Email Service
EMAIL_SERVICE=smtp
# UTIA CAS SMTP Configuration (Recommended):
SMTP_HOST=mail.utia.cas.cz
SMTP_PORT=587
SMTP_SECURE=false
SMTP_AUTH_REQUIRED=true
SMTP_AUTH_USER=<your-UTIA-username>
SMTP_AUTH_PASS=<your-UTIA-password>
# Alternative: Implicit TLS (port 465)
# SMTP_PORT=465
# SMTP_SECURE=true
FROM_EMAIL=noreply@utia.cas.cz
FROM_NAME="Cell Segmentation Platform"
# Alternative SMTP (Gmail example):
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# File Storage
STORAGE_TYPE=local
# For local storage:
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760
# For S3-compatible storage:
S3_ENDPOINT=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=
S3_REGION=

# Redis (optional, for caching and queues)
REDIS_URL=redis://localhost:6379

# Segmentation Service
SEGMENTATION_SERVICE_URL=http://localhost:8000

# CORS
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Monitoring & Observability
# OTEL_SAMPLING_RATE: Controls trace sampling (0.0-1.0)
# Development: 1.0 (100% sampling for debugging)
# Production: 0.01-0.1 (1-10% sampling for performance)
OTEL_SAMPLING_RATE=1.0  # Development: full sampling
# OTEL_SAMPLING_RATE=0.1  # Production: 10% sampling recommended